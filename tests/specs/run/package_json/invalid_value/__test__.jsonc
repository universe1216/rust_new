{
  "tempDir": true,
  "tests": {
    // should run fine when not referencing a failing dep entry
    "run_ok_auto": {
      "args": "run --quiet --node-modules-dir=auto ok.ts",
      "output": "ok.ts.out"
    },
    "run_ok_byonm": {
      "steps": [
        {
          "args": "install",
          "output": "install.out"
        },
        {
          "args": "run ok.ts",
          "output": "ok.ts.out"
        }
      ]
    },
    // should fail when referencing a failing dep entry
    "run_error_auto": {
      "args": "run --node-modules-dir=auto error.ts",
      "exitCode": 1,
      "output": "error_auto.out"
    },
    "run_error_byonm": {
      "steps": [
        {
          "args": "install",
          "output": "install.out"
        },
        {
          "args": "run error.ts",
          "exitCode": 1,
          "output": "error.out"
        }
      ]
    },
    // should output a warning about the failing dep entry
    "task_test": {
      "steps": [
        {
          "args": "install",
          "output": "install.out"
        },
        {
          "args": "task test",
          "output": "task.out"
        }
      ]
    }
  }
}
